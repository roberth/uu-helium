imports {
import UHA_Syntax
}

TYPE TypingStrategies = [TypingStrategy] 

DATA TypingStrategy 
   | TypingStrategy       
        name        : String
        typerule    : TypeRule
        constraints : UserConstraints
        
DATA TypeRule 
   | TypeRule 
        premises    : SimpleJudgements
        conclusion  : Judgement

DATA Judgement
   | Judgement
        expression  : Expression
        type        : Type

TYPE SimpleJudgements = [SimpleJudgement]

DATA SimpleJudgement
   | SimpleJudgement
        name        : Name
        type        : Type
        
TYPE UserConstraints = [UserConstraint]

DATA UserConstraint 
   | UserConstraint
        leftType    : Type
        rightType   : Type
        message     : String
